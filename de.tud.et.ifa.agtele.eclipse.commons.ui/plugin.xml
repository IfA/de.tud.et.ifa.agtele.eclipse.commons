<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.views">
      <category
            id="de.tud.et.ifa.agtele.ui.views.category"
            name="%_UI_ViewCategory_Name">
      </category>
      <view
            category="de.tud.et.ifa.agtele.ui.views.category"
            class="de.tud.et.ifa.agtele.ui.views.EMFModelHelpView"
            icon="icons/help_view.gif"
            id="de.tud.et.ifa.agtele.ui.views.EMFModelHelpView"
            name="%_UI_EMFModelHelpView_Name">
      </view>
   </extension>   
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="org.eclipse.jdt.ui.JavaPerspective">
         <view
               id="de.tud.et.ifa.agtele.ui.views.EMFModelHelpView"
               ratio="0.5"
               relationship="right"
               relative="org.eclipse.ui.views.ProblemView">
         </view>
      </perspectiveExtension>
   </extension>
      <extension point="org.eclipse.ui.editors">
      <editor
            id="de.tud.et.ifa.agtele.ui.editors.EcoreEditorID"
            name="AGTele Ecore Model Editor"
            icon="icons/EcoreModelFile.gif"
            class="de.tud.et.ifa.agtele.ui.editors.AgteleEcoreEditor"
            contributorClass="org.eclipse.emf.ecore.presentation.EcoreActionBarContributor">
         <contentTypeBinding contentTypeId="org.eclipse.emf.ecore"/>
         <contentTypeBinding contentTypeId="org.eclipse.emf.emof"/>
      </editor>
   </extension>
   
   <extension point="org.eclipse.ui.editors">
      <editor
            id="de.tud.et.ifa.agtele.ui.editors.ReflectiveEcoreEditorID"
            name="AGTele Reflective Ecore Model Editor"
            icon="platform:/plugin/org.eclipse.emf.edit/icons/full/obj16/ModelFile.gif"
            class="de.tud.et.ifa.agtele.ui.editors.AgteleEcoreEditor"
            contributorClass="org.eclipse.emf.ecore.presentation.EcoreActionBarContributor$Reflective">
         <contentTypeBinding contentTypeId="org.eclipse.emf.ecore.xmi"/>
      </editor>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="popup:de.tud.et.ifa.agtele.ui.editors.EcoreEditorID">
         <command
               commandId="de.tud.et.ifa.agtele.ui.commands.OpenGenModel"
               icon="icons/GenModelModelFile.gif"
               label="Open GenModel"
               style="push"
               tooltip="Jumps to the corresponding element in the GenModel associated with this Ecore model">
            <visibleWhen
                  checkEnabled="true">
            </visibleWhen>
         </command>
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="popup:org.eclipse.emf.ecore.presentation.EcoreEditorID">
         <command
               commandId="de.tud.et.ifa.agtele.ui.commands.OpenGenModel"
               icon="icons/GenModelModelFile.gif"
               label="Open GenModel"
               style="push"
               tooltip="Jumps to the corresponding element in the GenModel associated with this Ecore model">
            <visibleWhen
                  checkEnabled="true">
            </visibleWhen>
         </command>
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="popup:org.eclipse.emf.codegen.ecore.genmodel.presentation.GenModelEditorID">
         <menu
               icon="icons/JavaClassFile.gif"
               id="openCodeMenu"
               label="Open Code">
            <command
                  commandId="de.tud.et.ifa.agtele.ui.commands.OpenInterfaceModelCode"
                  label="Open Model Code (Interface)"
                  style="push"
                  tooltip="Jumps to the model code generated for the selected element">
               <visibleWhen
                     checkEnabled="true">
               </visibleWhen>
            </command>
            <command
                  commandId="de.tud.et.ifa.agtele.ui.commands.OpenImplModelCode"
                  label="Open Model Code (Impl)"
                  style="push"
                  tooltip="Jumps to the model code generated for the selected element">
               <visibleWhen
                     checkEnabled="true">
               </visibleWhen>
            </command>
            <command
                  commandId="de.tud.et.ifa.agtele.ui.commands.OpenEditCode"
                  label="Open Edit Code"
                  style="push"
                  tooltip="Jumps to the model code generated for the selected element">
               <visibleWhen
                     checkEnabled="true">
               </visibleWhen>
            </command>
         </menu>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            defaultHandler="de.tud.et.ifa.agtele.ui.handlers.OpenGenModelHandler"
            id="de.tud.et.ifa.agtele.ui.commands.OpenGenModel"
            name="OpenGenModel">
      </command>
      <command
            defaultHandler="de.tud.et.ifa.agtele.ui.handlers.OpenImplModelCodeHandler"
            id="de.tud.et.ifa.agtele.ui.commands.OpenImplModelCode"
            name="OpenImplModelCode">
      </command>
      <command
            defaultHandler="de.tud.et.ifa.agtele.ui.handlers.OpenInterfaceModelCodeHandler"
            id="de.tud.et.ifa.agtele.ui.commands.OpenInterfaceModelCode"
            name="OpenInterfaceModelCode">
      </command>
      <command
            defaultHandler="de.tud.et.ifa.agtele.ui.handlers.OpenEditCodeHandler"
            id="de.tud.et.ifa.agtele.ui.commands.OpenEditCode"
            name="OpenEditCode">
      </command>
   </extension>
</plugin>
